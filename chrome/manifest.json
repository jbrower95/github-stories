{
"manifest_version": 2,
    "name": "Github Stories",
    "description": "Stories for Github.",
    "version": "0.2",
    "permissions": [
          "storage"
    ],
    "icons": { "16": "icon16.png",
               "48": "icon48.png",
               "128": "icon128.png" },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*"
            ],
            "js": [
                "jquery.min.js", "storage.js", "stories.js", "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}